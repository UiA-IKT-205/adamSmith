<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
            android:text="Max"
            android:layout_width="41dp"
            android:layout_height="29dp"
            android:id="@+id/textMaxPause"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.956"
            app:layout_constraintVertical_bias="0.592" />

    <TextView
            android:text="Min"
            android:layout_width="32dp"
            android:layout_height="18dp"
            android:id="@+id/textMinPause"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.058"
            app:layout_constraintVertical_bias="0.583" />

    <TextView
            android:id="@+id/countDownView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_time_display"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.123"
            android:autoSizeMaxTextSize="50sp"
            android:textSize="60sp"/>

    <Button
            android:id="@+id/startCountdownButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/startButtonText"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/countDownView"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.118"/>

    <SeekBar
            android:layout_width="291dp"
            android:layout_height="30dp"
            android:id="@+id/BarWorkTimeDuration"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.45"
            app:layout_constraintVertical_bias="0.924" />

    <SeekBar
            android:layout_width="285dp"
            android:layout_height="32dp"
            android:id="@+id/BarPauseTimeDuration"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.476"
            app:layout_constraintVertical_bias="0.595" />

    <TextView
            android:text="Work time: "
            android:layout_width="116dp"
            android:layout_height="37dp"
            android:id="@+id/textWork"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.233"
            app:layout_constraintVertical_bias="0.867" />

    <TextView
            android:text="Pause time: "
            android:layout_width="126dp"
            android:layout_height="41dp"
            android:id="@+id/textPause"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.242"
            app:layout_constraintVertical_bias="0.533" />

    <TextView
            android:text="Min"
            android:layout_width="32dp"
            android:layout_height="18dp"
            android:id="@+id/textMinWork"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.042"
            app:layout_constraintVertical_bias="0.908" />

    <TextView
            android:text="Max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textMaxWork"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.923"
            app:layout_constraintVertical_bias="0.913" />

    <TextView
            android:text="Select Repetitions:"
            android:layout_width="135dp"
            android:layout_height="36dp"
            android:id="@+id/textSelectRepetitions"
            android:visibility="visible"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.311"
            app:layout_constraintVertical_bias="0.683" />

    <EditText
            android:layout_width="27dp"
            android:layout_height="19dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editSelectRepetitions"
            android:text="@string/editSelectRepetitions"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.596"
            app:layout_constraintVertical_bias="0.667" />

    <TextView
            android:text="Quantity Repetitions:"
            android:layout_width="138dp"
            android:layout_height="28dp"
            android:id="@+id/quantityRepetitionsDisplay"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.315"
            app:layout_constraintVertical_bias="0.768" />

    <TextView
            android:layout_width="107dp"
            android:layout_height="34dp"
            android:id="@+id/workTimeDuration"
            android:textSize="24sp"
            android:text="@string/workTimeDuration"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.641"
            app:layout_constraintVertical_bias="0.868" />

    <TextView
            android:layout_width="105dp"
            android:layout_height="35dp"
            android:id="@+id/pauseTimeDuration"
            android:textSize="24sp"
            android:text="@string/pauseTimeDuration"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.663"
            app:layout_constraintVertical_bias="0.528" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/workMayPause"
            tools:layout_editor_absoluteY="308dp"
            tools:layout_editor_absoluteX="175dp" />

</androidx.constraintlayout.widget.ConstraintLayout>